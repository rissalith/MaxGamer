# ============================================
# XMGamer 平台 - 环境变量配置模板
# 复制此文件为 .env 并填入真实值
# ============================================

# ----------------------------------
# 数据库配置
# ----------------------------------
MYSQL_ROOT_PASSWORD=xmgamer_root_2024_CHANGE_ME
MYSQL_DATABASE=xmgamer
MYSQL_USER=xmgamer_user
MYSQL_PASSWORD=xmgamer_pass_2024_CHANGE_ME

# ----------------------------------
# Redis 配置
# ----------------------------------
REDIS_PASSWORD=redis_pass_2024_CHANGE_ME

# ----------------------------------
# Flask 应用配置
# ----------------------------------
FLASK_ENV=production
SECRET_KEY=your-secret-key-min-32-chars-CHANGE_ME
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-CHANGE_ME

# ----------------------------------
# 游戏 API 配置
# ----------------------------------
# DeepSeek API (女巫游戏 AI)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# Gemini API (备用 AI)
GEMINI_API_KEY=your-gemini-api-key

# ----------------------------------
# 短信服务配置 (阿里云)
# ----------------------------------
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_SMS_SIGN_NAME=your-sms-sign-name
ALIYUN_SMS_TEMPLATE_CODE=your-sms-template-code

# ----------------------------------
# 邮件服务配置 (SendGrid)
# ----------------------------------
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@xmgamer.com

# ----------------------------------
# 微信登录配置
# ----------------------------------
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# ----------------------------------
# 支付配置
# ----------------------------------
# 支付宝
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key

# 微信支付
WECHAT_PAY_MCH_ID=your-wechat-pay-mch-id
WECHAT_PAY_API_KEY=your-wechat-pay-api-key

# ----------------------------------
# 域名配置
# ----------------------------------
DOMAIN=xmgamer.com
API_DOMAIN=api.xmgamer.com
GAME_WITCH_DOMAIN=play-witch.xmgamer.com

# ----------------------------------
# 服务器配置
# ----------------------------------
# 平台 API 端口
PLATFORM_API_PORT=5000

# 游戏服务端口
GAME_WITCH_PORT=5001

# ----------------------------------
# 日志配置
# ----------------------------------
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=10

# ----------------------------------
# 安全配置
# ----------------------------------
# CORS 允许的源
CORS_ORIGINS=https://xmgamer.com,https://api.xmgamer.com,https://play-witch.xmgamer.com

# Session 过期时间 (秒)
SESSION_LIFETIME=86400

# JWT Token 过期时间 (秒)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# ----------------------------------
# 性能配置
# ----------------------------------
# 数据库连接池
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis 连接池
REDIS_POOL_SIZE=10

# 工作进程数 (建议设置为 CPU 核心数)
WORKERS=4

# ----------------------------------
# 开发/调试配置
# ----------------------------------
DEBUG=false
TESTING=false

# ----------------------------------
# 备份配置
# ----------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7